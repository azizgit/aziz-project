<%= semantic_form_for @student do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :size => 20 }, :input_html => {:value => "enter your name"} %>
    <%= f.input :email, :input_html => { :size => 20 } %>
    <%= f.input :cell, :input_html => { :size => 20 } %>
    <%= f.input :gender, :as => :radio, :collection => ["male", "female"]%>
    <%= f.input :group, :as => :select, :collection => Group.pluck(:subject)%>
    <%= f.input :address,:input_html => { :class => 'autogrow', :rows => 10, :cols => 20, :maxlength => 10  } %> %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
